.rec-item-desc {
  line-height: 1.3em;
  height: calc(1.3em * 3);
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  text-overflow: ellipsis;
  overflow: hidden;
  color: #cccccc;
  font-size: 28rpx;
}

.rec-item-label {
  display: flex;
  align-items: center;
}

.rec-item-label .tag {
  flex-shrink: 0;
  line-height: 40rpx;
  height: 40rpx;
  padding: 0 25rpx;
  color: #7367f0;
  font-size: 28rpx;
  border-radius: 20rpx;
  background-color: rgba(115, 103, 240, .2);
  margin-right: 20rpx;
}

.rec-item-label .sub-tag {
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  text-overflow: ellipsis;
  overflow: hidden;
  color: #cccccc;
  font-size: 28rpx;
}

.rec-item-img {
  flex-shrink: 0;
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 0 2px rgba(0, 0, 0, 0.4);
  margin-left: 30rpx;
}