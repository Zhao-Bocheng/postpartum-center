@import "/common/tag.wxss";

.module-wrap {
  background-color: #ffffff;
  margin: 20rpx 30rpx 0rpx;
  padding: 25rpx;
  box-shadow: 0 0 2px #00000011;
  border-radius: 20rpx;
  overflow: hidden;
}

.charts-container {
  width: 100%;
  height: 500rpx;
}

.unused-service {
  width: 100%;
  height: 100%;
  background-color: red;
  transform: scale(0.95);
}

.current-swiper-item {
  transform: scale(1);
}

.rec-hd {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.rec-title {
  font-weight: bold;
  font-size: 40rpx;
  position: relative;
}

.rec-title::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translate(-50%, 100%);
  width: 70%;
  height: 10rpx;
  background: linear-gradient(to right, rgba(115, 103, 240, .1) 0%, rgba(115, 103, 240, .6) 25%, rgba(115, 103, 240, 0.8) 50%, rgba(115, 103, 240, .6) 75%, rgba(115, 103, 240, .1) 100%);
}

.rec-hd navigator {
  color: #9266f9;
  font-weight: bold;
  font-size: 28rpx;
}

.rec-item {
  display: flex;
  justify-content: space-between;
  padding: 25rpx 0;
  border-bottom: 1px solid #eeeeee;
}

.rec-item:first-child {
  border-top: 1px solid #eeeeee;
}

.item-text {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-desc {
  margin-bottom: 20rpx;
}

.item-title {
  font-weight: bold;
  margin-bottom: 10rpx;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  text-overflow: ellipsis;
  overflow: hidden;
}

.item-content,
.item-label .sub-tag {
  color: #cccccc;
  font-size: 28rpx;
}

.item-content {
  line-height: 1.3em;
  height: calc(1.3em * 3);
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  text-overflow: ellipsis;
  overflow: hidden;
}

.item-label {
  display: flex;
  align-items: center;
}

.item-label .tag {
  flex-shrink: 0;
  line-height: 40rpx;
  height: 40rpx;
  padding: 0 25rpx;
  color: #7367f0;
  font-size: 28rpx;
  border-radius: 20rpx;
  background-color: rgba(115, 103, 240, .2);
  margin-right: 20rpx;
}

.item-label .sub-tag {
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  text-overflow: ellipsis;
  overflow: hidden;
}

.item-img {
  flex-shrink: 0;
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 0 2px rgba(0, 0, 0, 0.4);
  margin-left: 30rpx;
}