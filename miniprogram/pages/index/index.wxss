.module-wrap {
  background-color: #ffffff;
  margin: 20rpx 30rpx 0rpx;
  padding: 25rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.2);
  border-radius: 20rpx;
  overflow: hidden;
}

.charts-container {
  width: 100%;
  height: 500rpx;
}

.unused-service-wrap {
  margin-top: 20rpx;
}

.unused-service_hd {
  padding: 0 55rpx;
  margin-bottom: 15rpx;
}

.unused-service_hd .title {
  font-weight: bold;
  font-size: 40rpx;
}

.unused-swiper-wrap {
  padding: 0 10rpx;
}

.unused-swiper-item {
  padding: 5rpx;
  box-sizing: border-box;
}

.unused-service {
  width: 100%;
  height: 100%;
  background-color: #ffffff;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.2);
  border-radius: 20rpx;
  transform: scale(0.95);
  overflow: hidden;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
}

.current-unused-service {
  transform: scale(1);
}

.unused-service-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.rec_hd {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.rec_hd .title {
  font-weight: bold;
  font-size: 40rpx;
  position: relative;
}

.rec_hd .title::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translate(-50%, 100%);
  width: 70%;
  height: 10rpx;
  background: linear-gradient(to right, rgba(115, 103, 240, .1) 0%, rgba(115, 103, 240, .6) 25%, rgba(115, 103, 240, 0.8) 50%, rgba(115, 103, 240, .6) 75%, rgba(115, 103, 240, .1) 100%);
}

.rec_hd navigator {
  color: #9266f9;
  font-weight: bold;
  font-size: 28rpx;
}

.rec-item {
  display: flex;
  justify-content: space-between;
  padding: 25rpx 0;
  border-bottom: 1px solid #eeeeee;
}

.rec-item:first-child {
  border-top: 1px solid #eeeeee;
}

.rec-item-msg {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.rec-item-title_desc {
  margin-bottom: 20rpx;
}

.rec-item-title {
  font-weight: bold;
  margin-bottom: 10rpx;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  text-overflow: ellipsis;
  overflow: hidden;
}

